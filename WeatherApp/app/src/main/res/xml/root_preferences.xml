<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Choose a way to get the weather">

        <SwitchPreferenceCompat
            app:key="auto"
            app:title="Automatically"
            app:defaultValue="true">
        </SwitchPreferenceCompat>

        <SwitchPreferenceCompat
            app:key="manual"
            app:title="Manually"
            app:defaultValue="false">
        </SwitchPreferenceCompat>

    </PreferenceCategory>

</PreferenceScreen>